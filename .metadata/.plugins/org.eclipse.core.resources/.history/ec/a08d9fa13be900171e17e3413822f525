<script type="text/javascript">
	window.onload = function btnOne() {
		var oBtn1 = document.getElementById('btn1');
		var oDiv1 = document.getElementById('div1');
		var oCh = oDiv1.getElementsByTagName('input');
		oBtn1.onclick = function() {
			var i = 0;
			while (i < oCh.length) {
				oCh[i].checked = true;
				i++;
			}
		};
	};
</script>
