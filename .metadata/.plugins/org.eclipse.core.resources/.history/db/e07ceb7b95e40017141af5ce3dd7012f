package com.zgcxueyuan.lsm;

import java.io.File;

public class FileDemo {

	public static void main(String[] args) {
		long statd =  System.currentTimeMillis();
		demo("c:\\");
		long end =  System.currentTimeMillis();
		System.out.println(end-statd);
		
	}

	public static void demo(String path){
		File dir = new  File(path);
		File [] files = dir.listFiles();
		int isNull = 0;
		int noNull = 0;
		if (files==null) {
			isNull++;
			return;
		}
		for (File f : files) {
			if (f.isDirectory()) {
				demo(f.getPath());
				noNull++;
			}
		}
		System.out.println("null:"+isNull+"£¡null:"+noNull);
	}


}
